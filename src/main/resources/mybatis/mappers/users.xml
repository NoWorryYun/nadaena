<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="users">

<resultMap id="resultMapUserVo" type="UserVo">
		<result column="userNo" property="userNo" />
		<result column="email" property="email" />
		<result column="pasword" property="pasword" />
		<result column="name" property="name" />
		<result column="birth" property="birth" />
		<result column="hp" property="hp" />
		<result column="postNo" property="postNo" />
		<result column="address1" property="address1" />
		<result column="address2" property="address2" />
	</resultMap>

	<insert id="insertUser" parameterType="UserVo">
		<![CDATA[
			insert into users 
			values(SEQ_userNo.nextval,
			       #{email},
			       #{nickName},
			       #{pasword},
			       #{name},
			       #{birth},
			       #{hp},
			       #{postNo},
			       #{address1},
			       #{address2}
			       )		
		]]>
	</insert>
		<select id="selectUser" parameterType="UserVo"
		resultMap="resultMapUserVo">
		<![CDATA[
			select userNo,
				   email,
       			   nickName
			from users
			where email = #{email}
			and pasword = #{pasword}
		]]>
	</select>
	
	<select id="selectUserByNo" parameterType="int" resultMap="resultMapUserVo">

		<!-- 정보조회용 -->
		<![CDATA[
		SELECT  
			      userNo,
			      name,
			       nickName,
			       pasword,
			       birth,
			       hp,
			       postNo,
			       address1,
			       address2
			FROM 
			      users
			WHERE 
			      userNo =#{userNo}
        ]]>

	</select>
	
	<update id="updateUser" parameterType="UserVo">
		<![CDATA[
			UPDATE  users
			set 
			name = #{name},
			nickName = #{nickName},
			pasword = #{pasword},
			birth = #{birth},
			hp = #{hp},
			postNo = #{postNo},
			address1 =  #{address1},
			address2 =  #{address2}
			WHERE 
			userNo = #{userNo}
		]]>
	</update>
	<select id="maxuserNO"   resultType="int">
	<![CDATA[
		select Max(userNo) From users 
	]]>
	</select>

<select id="findId" parameterType="UserVo"
		resultMap="resultMapUserVo">
		<![CDATA[
			select 
				   email
			from users
			where name = #{name}
			and hp = #{hp}
		]]>
	</select>


<select id="findIdCheck" resultType="int">
select count(*) from users where email = #{email}
</select>

<select id="findPw" parameterType="UserVo"
		resultMap="resultMapUserVo">
		<![CDATA[
			select 
				   pasword
			from users
			where email = #{email}
			and hp =#{hp}
			and name = #{name}
		]]>
	</select>
	</mapper>